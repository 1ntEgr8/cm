#!/usr/bin/env bash

set -e

export base="$(dirname $0)"
cmd="$1"

source "$base/util"
source "$base/env"

if [[ $# -eq 0 ]]; then
    "$base/cmd/help" "main" "index"
    exit 0
fi

if [[ ! -e "$base/cmd/$cmd" ]]; then
    warn "The command $cmd doesn't exist. See help text below for a list of supported commands"
    "$base/cmd/help" "main" "index"
else
    shift
    "$base/cmd/$cmd" "main" "$@"
fi
